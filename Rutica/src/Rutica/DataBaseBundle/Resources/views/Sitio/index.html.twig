    </header><!--/header-->
    <div class="section section-breadcrumbs">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<h1>Sitios Turísticos</h1>
					</div>
				</div>
			</div>
    </div>
    <center>
        <div class="row">
            <div class ="col-md-6" style="margin-left: 300px;">
                <table class="table table-hover" data-toggle="table" data-search="true" style="width:100%">

                    <thead>
                        <tr>

                            <th>Nombre</th>

                            <th>Longitud</th>
                            <th>Latitud</th>
                            <th>Precio</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('sitio_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>

                                <td>{{ entity.longitud }}</td>
                                <td>{{ entity.latitud }}</td>
                                <td>{{ entity.precio }}</td>
                                <td>
                                    <ul>
                                        
                                        <a href="{{ path('sitio_edit', { 'id': entity.id }) }}">editar</a>
                                       
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                    
                    <ul class="pager">
				  <li><a href="#">Anterior</a></li>
				  <li><a href="{{ path('sitio_new') }}">Nuevo Sitio</a></li>
				  <li><a href="#">Siguiente</a></li>
				</ul>

            </div>



        </div>

    </div>

</div>

{% include 'RutasBundle:Base:header.html.twig' %}

<!-- Título de página -->
<div class="section section-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Sitios Turísticos</h1>
            </div>
        </div>
    </div>
</div>
<!-- Título de página -->		

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>Lista de sitios turísticos registrados</h2>
                <h3>playa, montaña y diferentes locaciones para turistear</h3>					
            </div>
        </div>
    </div>
</div>	

<div class="container">
    <div class="modal fade" id="ventanaModalDescripcionSitio">
        <div class="modal-dialog">
            <div class="modal-content">
                <!--Header del modal-->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title ">Bosque nuboso Monteverde</h4>   
                </div>
                <!--Contenido de la ventana-->
                <div class="modal-body" align="center">
                    <img src="{{asset('bundles/templateboostrap/img/sitios/1.jpg')}}" width="550" height="350" title="Destino" alt="" />
                </div>
                <div>
                    <p>Provincia: Puntarenas</p>
                    <p>Actividad: Aventura</p>
                    <p>Descrición: Con un bosque tropical nuboso mundialmente famoso la Reserva Biológica Monteverde 
                        es una de las áreas protegidas privadas más importantes de Costa Rica. Con un 90% de selva 
                        virgen su biodiversidad de ecosistemas reúne a unos 70.000 amantes de la naturaleza al año 
                        provenientes de diversos países. </p>
                </div>

                <!--Footer de la ventana-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>


    </div>

</div>

<div class="section">
    <div class="container">
        <div class="row">

            <ul class="grid cs-style-2">

                {% for entity in entities %}
                    <div class="col-md-4 col-sm-6">
                        <figure>
                            {% set foo ='bundles/templateboostrap/img/sitios/' ~ entity.imagen %}   

                            <img src="{{asset(foo)}}" alt="" height="250px" width="400px" href="#ventanaModalDescripcionSitio" class="btn btn-primary" data-toggle="modal"/>
                            <figcaption>
                                <h3>{{ entity.nombre }}</h3>
                                <span>TODO</span>
                            </figcaption>
                        </figure>
                    </div>
                {% endfor %}
            </ul>
        </div>
        <ul class="pager">
            <li><a href="#">Previous</a></li>
            <li><a href="#">Next</a></li>
        </ul>

    </div>
</div>

{# Footer #}
